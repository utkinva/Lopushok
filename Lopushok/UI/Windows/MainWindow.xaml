<Window x:Class="Lopushok.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Lopushok"
        mc:Ignorable="d"
        Title="MainWindow" Height="800" Width="1000" MinHeight="600" MinWidth="800">
    <Grid Background="#FFFFFF">
        <Grid.RowDefinitions>
            <RowDefinition Height="80"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <StackPanel Background="#CEFFF9"/>
        <TextBlock Grid.Row="0"
                   Style="{StaticResource styleMainText}"
                   Text="Лопушок"
                   VerticalAlignment="Top"/>

        <Image HorizontalAlignment="Left" 
               VerticalAlignment="Top" 
               Grid.Row="0" Width="80"
               Stretch="Uniform"
               Source="/UI/Logo/Лопушок.png"/>
        
        <Frame Grid.Row="1" 
               NavigationUIVisibility="Hidden" 
               Name="MainFrame"/>

    </Grid>
</Window>
